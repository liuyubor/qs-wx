.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 200rpx 0;
    justify-content: space-between;
    box-sizing: border-box;
  } 

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
  }
  
  .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }