<!-- pages/index/info/info.wxml -->
<view class="container">
    <view class="title">
        <text class="siteTitle">{{siteName}}</text>
    </view>
    <text class="text">{{siteDesc}}</text>
</view>
<view class="container">
    <view class="circle">
        <van-circle value="{{stats}}" text="{{stats}}%" stroke-width="9" ayer-color="#ee0a24" size="180" />
    </view>
</view>
<view class="container">
    <van-cell title="item" size="large" bind:click="onTimeClick" />
    <van-cell-group>
        <block wx:for="{{timeList}}">
            <van-cell title="{{item}}" size="large" bind:click="onTimeClick" data-item="{{item}}"/>
        </block>
    </van-cell-group>
</view>