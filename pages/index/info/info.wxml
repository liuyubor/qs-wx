<!--pages/index/info/info.wxml-->
<van-tabs active="{{ active }}" swipeable sticky animated>
    <van-tab title="站点须知">
        <view class="container">
            <text class="siteTitle">
                {{siteName}}
            </text>
            <text class="text">
                {{siteDesc}}
            </text>
        </view>
    </van-tab>
    <van-tab title="查看信息">
        <view class="container">
            <view class="circle">
                <van-circle value="{{stats}}" text="{{stats}}%" stroke-width="9" ayer-color="#ee0a24" size="180" />
            </view>
            <view class="buttom-list">

            </view>

        </view>
    </van-tab>
    <van-tab title="可预约时段">
        <view class="container">
            <view wx:for="{{siteDate}}" wx:for-index="idx" wx:for-item="sites" data-id="{{sites.id}}" data-name="{{sites.name}}" data-desc="{{sites.description}}">
            </view>
        </view>
    </van-tab>
</van-tabs>