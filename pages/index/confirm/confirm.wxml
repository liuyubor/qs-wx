<!-- pages/index/confirm/confirm.wxml -->
<view class="title-info">
    <van-cell-group inset>
        <van-cell title="{{siteName}}" label="{{siteDesc}}" />
        <van-cell title="{{siteTime}}" />
    </van-cell-group>
</view>
<view class="container">
    <view class="title">请确认您的预约信息</view>
    <view class="info">
        <van-cell-group>
            <van-field label="姓名" center clearable value="{{ username }}" placeholder="请输入用户名" />
            <van-field label="电话" center clearable value="{{ phone }}" placeholder="请输入用户名" />
        </van-cell-group>
    </view>
    <view class="title"></view>
</view>
<view class="submit">
    <van-button type="info" size="large" bind:click="onClick">提交</van-button>
</view>
<van-dialog id="van-dialog" />